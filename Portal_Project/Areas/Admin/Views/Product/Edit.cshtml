@model Portal_Project.Models.Portal.DMC.Product

@{
    bool isEditable = (bool)ViewBag.IsEditable;

    ViewData["Title"] = "Edit Product";
}

<h1><i class="fas fa-edit"></i> @ViewData["Title"]</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-area="Admin" asp-controller="Product" asp-action="Edit" method="post">
            <input type="hidden" asp-for="ProductID" />
            <input type="hidden" asp-for="UserID" />
            <input type="hidden" asp-for="Status" />

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="BasePrice" class="control-label"></label>
                <input asp-for="BasePrice" class="form-control" />
            </div>

            <div class="form-group">
                @if (isEditable)
                {
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Save
                    </button>
                }
                else
                {
                    <button disabled title="The product must be in Canceled to edit it" type="submit" class="btn btn-warning">
                        <i class="fas fa-save"></i> Save
                    </button>
                }

                <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-undo-alt"></i> Cancel</a>
            </div>

            <div asp-validation-summary="All" class="text-danger"></div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}