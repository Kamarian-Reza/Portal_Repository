@model Portal_Project.Areas.Admin.Models.Portal.VMC.UserVM

@{
    ViewData["Title"] = "Edit User";
}

<h4 style="text-align: center;"><i class="far fa-edit"></i> @ViewData["Title"]</h4>

<div class="row">
    <div class="col-md-8 offset-md-2">
        <hr />

        <form asp-area="Admin" asp-controller="User" asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="NationalID" />

            <div class="form-group">
                <label asp-for="NationalID" class="control-label"></label>
                <input for="NationalID" class="form-control" value="@Model.NationalID" disabled />
            </div>

            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Password" class="control-label">Password</label>
                <input asp-for="Password" class="form-control" value="******" />
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-sm btn-success col-sm-12 col-md-3 col-lg-2 m-1"><i class="far fa-save text-110 ml-2"></i> Save</button>

                <a asp-action="Index" class="btn btn-sm btn-secondary col-sm-12 col-md-3 col-lg-2 m-1"><i class="fas fa-undo-alt text-110 ml-2"></i> Cancel</a>
            </div>

            <div asp-validation-summary="All" class="text-danger"></div>
        </form>
    </div>
</div>